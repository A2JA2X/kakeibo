<%= form_with(model: board, local: true) do |form| %>
  <% if board.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger" role="alert">
        全ての項目を完成させてください
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <label for="amount_type">
      <h3>タイプ</h3>
    </label>
    <%= form.select :amount_type, options_for_select([["収入", "収入"], ["支出","支出"]]),{},{ :class => "form-control"} %>
  </div>

  <div class="form-group">
    <label for="amount_type">
      <h3>金額</h3>
    </label>
    <%= form.number_field :amount, id: :board_amount, :class => "form-control" %>
  </div>

  <div class="form-group">
    <label for="amount_type">
      <h3>日付</h3>
    </label>
    <%= form.date_select :io_date, {}, { :class => "form-control"} %>
  </div>

  <div class="form-group">
    <label for="amount_type">
      <h3>備考</h3>
    </label>
    <%= form.text_area :details, id: :board_details, :class => "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit '実行', :class => "btn btn-primary" %>
  </div>
<% end %>
